{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
          {
            "label": "CleanBuild",
            "type": "shell",
            "command": "cd ${workspaceFolder}; rm -rf build; mkdir -p build; cd build; cmake ..; make -j all",
            "problemMatcher": {
              "base": "$gcc",
              "fileLocation": ["relative", "${workspaceFolder}/build"]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
          },
          {
            "label": "Run QEMU",
            "type": "shell",
            "command": "echo QEMU started; qemu-system-arm -machine mps2-an385 -cpu cortex-m3 -kernel ${workspaceFolder}/build/demo -monitor none -nographic -serial stdio -s -S",
            "dependsOn": ["CleanBuild"],
            "isBackground": true,
            "problemMatcher": [
              {
                "pattern": [
                  {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                  }
                ],
                "background": {
                  "activeOnStart": true,
                  "beginsPattern": ".",
                  "endsPattern": "QEMU started",
                }
              }
            ]
          },
    ]
}